{
  "name": "feelpix/homeCost",
  "description": "simple application to handle home costs",
  "minimum-stability": "dev",
  "license": "MIT",
  "type": "project",
  "authors": [
    {
      "name": "feelpix",
      "email": "feelpix@neuf.fr"
    }
  ],
  "repositories": [
    {
      "type": "vcs",
      "url": "git@numeric-workshop.com:/home/git/bareRepos/09-LIBS/serval.git"
    }
  ],
  "require": {
    "php": ">=5.5.9",
    "NumericWorkshop/Serval": "dev-master",
    "laravel/framework": "5.1.*"
  },
  "require-dev": {
    "fzaninotto/faker": "~1.4",
    "mockery/mockery": "0.9.*",
    "phpunit/phpunit": "~4.0",
    "phpspec/phpspec": "~2.1"
  },
  "autoload": {
    "classmap": [
      "database"
    ],
    "psr-0": {
      "Service": "./app",
      "Serval": "vendor/NumericWorkshop/Serval/src",
      "config": "./"
    },
    "psr-4": {
      "App\\": "app/"
    }
  },
  "autoload-dev": {
    "classmap": [
      "tests/TestCase.php"
    ]
  },
  "scripts": {
    "post-install-cmd": [
      "php artisan clear-compiled",
      "php artisan optimize"
    ],
    "pre-update-cmd": [
      "php artisan clear-compiled"
    ],
    "post-update-cmd": [
      "php artisan optimize"
    ],
    "post-root-package-install": [
      "php -r \"copy('.env.example', '.env');\""
    ],
    "post-create-project-cmd": [
      "php artisan key:generate"
    ]
  },
  "config": {
    "preferred-install": "dist"
  }
}
